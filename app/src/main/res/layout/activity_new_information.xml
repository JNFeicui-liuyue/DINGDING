<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.activity.NewInformationActivity">

    <com.example.dingding.ben.utils.HMActionBar
        android:id="@+id/actionbar_new_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dingding.ben.utils.HMActionBar>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="30px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="接收新消息通知"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_receive_new_message"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_on"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_unreceive_new_message"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_off"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_account_protect"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="通知显示消息详情"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_inform_show"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_on"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_inform_not_show"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_off"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="#EEEEF3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="若关闭，聊天新消息将不再显示发送人和消息内容。"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="聊天消息提醒"
            android:textSize="20sp"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="#acacae"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <TextView
                android:text="声音"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_start_sound"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@mipmap/_uidic_forms_toggle_bg_on"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_close_sound"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@mipmap/_uidic_forms_toggle_bg_off"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <View
            android:background="#DEDEE0"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <TextView
                android:text="震动"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_start_shake"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@mipmap/_uidic_forms_toggle_bg_on"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_close_shake"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@mipmap/_uidic_forms_toggle_bg_off"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

            <TextView
                android:text="DING消息提醒"
                android:textSize="20sp"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="#acacae"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="110px">

                <TextView
                    android:text="声音"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_DING_start_sound"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/_uidic_forms_toggle_bg_on"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_DING_close_sound"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/_uidic_forms_toggle_bg_off"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <View
                android:background="#DEDEE0"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="110px">

                <TextView
                    android:text="震动"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_DING_start_shake"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/_uidic_forms_toggle_bg_on"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_DING_close_shake"
                    android:layout_marginRight="30px"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/_uidic_forms_toggle_bg_off"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

    </LinearLayout>
</LinearLayout>
