<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_and_security"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.dingding.activity.AccountAndSecurityActivity">

    <com.example.dingding.ben.utils.HMActionBar
        android:id="@+id/actionbar_account_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dingding.ben.utils.HMActionBar>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="30px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_account_security"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="账号与安全"
            android:textSize="20sp"
            android:id="@+id/tv_word1"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/tv_word2"
            android:src="@mipmap/icon_device_safe"
            android:layout_toLeftOf="@+id/tv_protected"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_width="60px"
            android:layout_height="60px"/>

        <TextView
            android:text="已保护"
            android:textSize="20sp"
            android:textColor="#747373"
            android:id="@+id/tv_protected"
            android:layout_toLeftOf="@+id/iv_account_security"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_account_security"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_cell_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="50px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_update_new_number"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:id="@+id/tv_update_new_number"
            android:text="更换手机号"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:text="15623489586"
            android:textSize="20sp"
            android:textColor="#747373"
            android:id="@+id/tv_phone_number"
            android:layout_toLeftOf="@+id/iv_phone_number"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_phone_number"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_cell_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_login_password"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="钉钉登录密码"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_login_password"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_cell_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="50px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_password_lock"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="安全密码锁定"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/tv_password_lock"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:text="未开启"
            android:textSize="20sp"
            android:textColor="#747373"
            android:id="@+id/tv_unstart"
            android:layout_toLeftOf="@+id/iv_password_lock"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_password_lock"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/common_cell_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="15px"
            android:background="#EEEEF3"
            android:layout_marginLeft="30px"
            android:text="包括锁屏保护、隐藏密聊对话的设置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
