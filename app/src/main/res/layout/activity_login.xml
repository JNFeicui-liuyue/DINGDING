<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.activity.LoginActivity">

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/iv_login_icon"
        android:layout_width="match_parent"
        android:layout_height="70px"></View>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:text="+86"
            android:textSize="18sp"
            android:textColor="#313131"
            android:id="@+id/tv_word"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_toRightOf="@+id/tv_word"
            android:src="@drawable/login_countty_select_arrow"
            android:id="@+id/iv_login_country"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/line"
            android:background="#999b9e"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/iv_login_country"
            android:layout_gravity="center_vertical"
            android:layout_width="1px"
            android:layout_height="100px"/>

        <com.example.dingding.ben.utils.ClearEditText
            android:background="#ffffff"
            android:id="@+id/login_edt_username"
            android:layout_toRightOf="@+id/line"
            android:gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号码"
            android:layout_marginRight="40px"
            />

    </RelativeLayout>

    <View
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:id="@+id/line1"
        android:background="#c7c7ca"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <View
        android:id="@+id/view18"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="35px"/>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/view18"
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:text="密码"
            android:textSize="18sp"
            android:textColor="#313131"
            android:id="@+id/tv_word1"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <com.example.dingding.ben.utils.ClearEditText
            android:background="#ffffff"
            android:id="@+id/login_edt_pwd"
            android:inputType="numberPassword"
            android:layout_toRightOf="@+id/tv_word1"
            android:gravity="center_vertical"
            android:layout_marginLeft="65px"
            android:layout_marginRight="40px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_below="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="20px"/>

    <View
        android:id="@+id/view11"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="30px"/>


    <Button
        android:text="登    录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/login_btn"
        android:layout_below="@+id/view11"
        android:background="@drawable/enterdingding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view13"
        android:layout_below="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="20px"></View>

    <RelativeLayout
        android:id="@+id/login_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view13">

        <TextView
            android:layout_marginLeft="30px"
            android:text="新用户注册"
            android:textColor="#54b1d7"
            android:id="@+id/tv_newuser_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentRight="true"
            android:text="使用验证码登录"
            android:textColor="#54b1d7"
            android:id="@+id/tv_code_login"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



    <TextView
        android:layout_above="@+id/view4"
        android:layout_centerHorizontal="true"
        android:text="更多"
        android:textColor="#84C3DD"
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="50px"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_below="@+id/relativeLayout1"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/iv_login_icon"
        android:src="@drawable/login_icon"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="60px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:id="@+id/line2"
        android:background="#c7c7ca"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/view3"
        />

</RelativeLayout>

