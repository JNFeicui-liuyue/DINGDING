<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_privacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.activity.PrivacyActivity">

    <com.example.dingding.ben.utils.HMActionBar
        android:id="@+id/actionbar_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dingding.ben.utils.HMActionBar>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="30px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="允许非好友查看我的认证企业信息"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_check_info"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_on"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_uncheck_info"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_off"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="30px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_account_protect"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="手机通讯录匹配"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_match_addlist"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_on"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_unmatch_addlist"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_off"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="#EEEEF3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="开启后，为你推荐已经注册钉钉的手机联系人，同时也可以电话呼叫手机里的联系人"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="#acacae"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/rl_privacy_blacklist"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <TextView
                android:text="黑名单"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/tv_privacy_blacklist"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_blacklist"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@drawable/common_cell_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <View
            android:background="#DEDEE0"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <View
            android:background="#EEEEF3"
            android:layout_width="match_parent"
            android:layout_height="30px"/>

        <View
            android:background="#DEDEE0"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/rl_privacy_share_phonenumber"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <TextView
                android:text="共享手机号码"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/tv_privacy_share_phonenumber"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_share_phonenumber"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@drawable/common_cell_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <TextView
            android:text="查看已经共享过手机号的好友列表"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
