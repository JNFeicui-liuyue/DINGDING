<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_new_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.dingding.activity.InputNewNumberActivity">

    <com.example.dingding.ben.utils.HMActionBar
        android:id="@+id/actionbar_input_new_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dingding.ben.utils.HMActionBar>

    <LinearLayout
        android:orientation="vertical"
        android:background="#EAECED"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="100px"
            android:layout_marginBottom="100px"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@mipmap/icon_change_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="你的手机号："
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:hint="12654877456"
                android:textSize="25sp"
                android:textColor="#000"
                android:textColorHint="#000"
                android:cursorVisible="false"
                android:background="#EAECED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:text="更换手机号"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@drawable/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="30px"
            android:text="更换手机号后，登录手机号和企业通讯录号码均改变。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
