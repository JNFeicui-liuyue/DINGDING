<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_protect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.activity.AccountProtectActivity">

    <com.example.dingding.ben.utils.HMActionBar
        android:id="@+id/actionbar_account_protect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.dingding.ben.utils.HMActionBar>

    <View
        android:background="#EEEEF3"
        android:layout_width="match_parent"
        android:layout_height="30px"/>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_account_protect"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="110px">

        <TextView
            android:text="账号保护"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_account_protect"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_on"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_account_unprotect"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@mipmap/_uidic_forms_toggle_bg_off"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="#DEDEE0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="#EEEEF3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="开启账号保护后，在不常用的手机上登录钉钉，需要通过短信验证你的手机号码。"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="常用设备"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="#acacae"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
