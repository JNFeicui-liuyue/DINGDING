<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140px"
    android:background="#f4f1f1"
    >
    <View
        android:id="@+id/line"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"/>

    <ImageView
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:id="@+id/iv_back"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/line"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/actionbar_left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/iv_back"
        android:text="Title"
        android:textColor="#3b3b3d"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginLeft="20px"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="46px"
        android:scaleType="centerInside"
        android:src="@drawable/common_back_icon"
        android:id="@+id/actionbar_left_image"
        android:visibility="gone"
        android:layout_toRightOf="@id/actionbar_left_text"
        android:background="#00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Title"
        android:textColor="@android:color/white"
        android:id="@+id/actionbar_title"
        android:textSize="23sp"
        android:visibility="gone"
        android:ems="10"
        android:ellipsize="middle"
        android:singleLine="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:id="@+id/actionbar_right"
        android:visibility="gone"
        android:layout_marginRight="21dp"
        android:textSize="15.5sp"/>

    <Button
        android:shadowRadius="1"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_right_btn"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/jump_btn_background"
        android:layout_marginRight="25px" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/common_back_icon"
        android:id="@+id/actionbar_right_image"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="#00000000"
        android:layout_marginRight="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/common_back_icon"
        android:id="@+id/actionbar_right_image2"
        android:layout_toLeftOf="@id/actionbar_right_btn"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="#00000000" />

    <View
        android:id="@+id/line1"
        android:background="#d5d5d9"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>