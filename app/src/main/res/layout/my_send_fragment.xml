<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_send_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dingding.ui.fragment.MySendFragment">

    <ImageView
        android:id="@+id/iv_reapacket"
        android:layout_centerInParent="true"
        android:src="@drawable/redpackets_my_empty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20px"
        android:gravity="center"
        android:textColor="#C8C7CC"
        android:textSize="20sp"
        android:layout_below="@+id/iv_reapacket"
        android:text="你居然没发出过红包"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
